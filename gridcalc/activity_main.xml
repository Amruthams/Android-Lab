            android:text="3" />

        <Button
            android:id="@+id/button12"
            android:layout_width="74dp"
            android:layout_height="65dp"
            android:text="+" />

        <Button
            android:id="@+id/button11"
            android:layout_width="74dp"
            android:layout_height="65dp"
            android:text="0" />

        <Button
            android:id="@+id/button10"
            android:layout_width="74dp"
            android:layout_height="65dp"
            android:text="." />

        <Button
            android:id="@+id/button9"
            android:layout_width="74dp"
            android:layout_height="65dp"
            android:text="=" />
    </GridLayout>
</LinearLayout>